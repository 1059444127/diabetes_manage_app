<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zpy.diabetes.app.widget.LineEditText
            android:id="@+id/et_register_doctor_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="请输入姓名"
            android:maxLines="8"
            android:singleLine="true"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size15"
            app:lineColor="@color/theme_color" />

        <com.zpy.diabetes.app.widget.LineEditText
            android:id="@+id/et_register_doctor_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_name"
            android:layout_alignRight="@id/et_register_doctor_name"
            android:layout_below="@id/et_register_doctor_name"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="20"
            android:singleLine="true"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size15"
            app:lineColor="@color/theme_color" />


        <com.zpy.diabetes.app.widget.LineEditText
            android:id="@+id/et_register_doctor_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_password"
            android:layout_alignRight="@id/et_register_doctor_password"
            android:layout_below="@id/et_register_doctor_password"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:maxLines="20"
            android:singleLine="true"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size15"
            app:lineColor="@color/theme_color" />

        <com.zpy.diabetes.app.widget.LineEditText
            android:id="@+id/et_register_doctor_hospital"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_password"
            android:layout_alignRight="@id/et_register_doctor_password"
            android:layout_below="@id/et_register_doctor_confirm_password"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请输入您所在的医院"
            android:maxLines="20"
            android:singleLine="true"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size15"
            app:lineColor="@color/theme_color" />

        <com.zpy.diabetes.app.widget.LineEditText
            android:id="@+id/et_register_doctor_position"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_password"
            android:layout_alignRight="@id/et_register_doctor_password"
            android:layout_below="@id/et_register_doctor_hospital"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请输入您的职位"
            android:maxLines="20"
            android:singleLine="true"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size15"
            app:lineColor="@color/theme_color" />

        <RelativeLayout
            android:id="@+id/layout_select_sex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_confirm_password"
            android:layout_alignRight="@id/et_register_doctor_confirm_password"
            android:layout_below="@id/et_register_doctor_position"
            android:layout_marginTop="15dp"
            android:paddingLeft="7dp"
            android:background="@drawable/radius_layout_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="请选择性别"
                android:textColor="@color/font_thin_gray"
                android:textSize="@dimen/font_size16" />

            <ImageView
                android:id="@+id/image_right_select_sex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/icon_right_gray" />

            <TextView
                android:id="@+id/tv_doctor_select_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_right_select_sex"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_select_birthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_confirm_password"
            android:layout_alignRight="@id/et_register_doctor_confirm_password"
            android:layout_below="@id/layout_select_sex"
            android:layout_marginTop="15dp"
            android:paddingLeft="7dp"
            android:background="@drawable/radius_layout_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="请选择生日"
                android:textColor="@color/font_thin_gray"
                android:textSize="@dimen/font_size16" />

            <ImageView
                android:id="@+id/image_right_select_birthday"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/icon_right_gray" />

            <TextView
                android:id="@+id/tv_doctor_select_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_right_select_birthday"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_register_doctor_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_select_birthday"
            android:layout_alignRight="@id/layout_select_birthday"
            android:layout_below="@id/layout_select_birthday"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_layout_shape">

            <EditText
                android:id="@+id/et_doctor_info"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="top"
                android:hint="请输入您的简介并上传您的资质照片"
                android:lineSpacingMultiplier="1.3"
                android:maxLength="500"
                android:padding="10dp"
                android:singleLine="false"
                android:textColor="@color/font_thin_gray"
                android:textColorHint="@color/font_thin_gray"
                android:textSize="@dimen/font_size15" />

            <ImageView
                android:id="@+id/image_upload_doctor_certificate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/et_doctor_info"
                android:src="@mipmap/icon_upload_image" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_register_doctor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/et_register_doctor_password"
            android:layout_alignRight="@id/et_register_doctor_password"
            android:layout_below="@id/layout_register_doctor_info"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/radius_button_shape"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size17" />

    </RelativeLayout>
</ScrollView>

