<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tv_submit_question"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_submit_question"
        android:layout_alignLeft="@id/tv_submit_question"
        android:layout_alignRight="@id/tv_submit_question"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius_line_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_ask_question_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入问题标题"
            android:maxLength="100"
            android:singleLine="true"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textSize="@dimen/font_size16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_background" />

        <EditText
            android:id="@+id/et_ask_question_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请详细描述您的问题、症状、身体状况"
            android:lineSpacingMultiplier="1.3"
            android:singleLine="false"
            android:textColor="@color/font_deep_gray"
            android:textColorHint="@color/font_thin_gray"
            android:textSize="@dimen/font_size16" />
    </LinearLayout>
</RelativeLayout>