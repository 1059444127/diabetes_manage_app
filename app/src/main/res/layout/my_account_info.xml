<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/image_my_account_info_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@mipmap/img_default_phone_blue"
            app:siBorderColor="@color/theme_color"
            app:siBorderWidth="1dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/line_margin_left_right"
            android:layout_marginRight="@dimen/line_margin_left_right"/>

        <RelativeLayout
            android:id="@+id/layout_account_info_name"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="姓名"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:id="@+id/tv_account_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:ellipsize="end"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/line_margin_left_right"
            android:layout_marginRight="@dimen/line_margin_left_right"/>

        <RelativeLayout
            android:id="@+id/layout_account_info_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="电话"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:id="@+id/tv_account_info_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/line_margin_left_right"
            android:layout_marginRight="@dimen/line_margin_left_right"/>

        <RelativeLayout
            android:id="@+id/layout_account_info_sex"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="性别"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:id="@+id/tv_account_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/line_margin_left_right"
            android:layout_marginRight="@dimen/line_margin_left_right"/>

        <RelativeLayout
            android:id="@+id/layout_account_info_birthday"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="生日"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:id="@+id/tv_account_info_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/line_margin_left_right"
            android:layout_marginRight="@dimen/line_margin_left_right"/>

        <RelativeLayout
            android:id="@+id/layout_account_info_suffer_date"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="患病日期"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:id="@+id/tv_account_info_suffer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:textColor="@color/font_deep_gray"
                android:textSize="@dimen/font_size16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/line_margin_left_right"
            android:layout_marginRight="@dimen/line_margin_left_right"/>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_button_shape"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size15" />
    </LinearLayout>
</ScrollView>
